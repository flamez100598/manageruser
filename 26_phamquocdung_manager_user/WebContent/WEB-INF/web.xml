<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>26_phamquocdung_manager_user</display-name>
	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>manageruser.controllers.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>system_error</servlet-name>
		<servlet-class>manageruser.controllers.SystemErrorController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>system_error</servlet-name>
		<url-pattern>/error.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>manageruser.controllers.LogoutController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>listUser</servlet-name>
		<servlet-class>manageruser.controllers.ListUserController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>listUser</servlet-name>
		<url-pattern>/listUser.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>addEditFormUser</servlet-name>
		<servlet-class>manageruser.controllers.AddEditUserController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addEditFormUser</servlet-name>
		<url-pattern>/addEdit.do</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>checkLogin</filter-name>
		<filter-class>manageruser.filter.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>checkLogin</filter-name>
		<url-pattern>/listUser.do</url-pattern>
		<url-pattern>/addEdit.do</url-pattern>
		<url-pattern>/View/jsp/ADM002.jsp</url-pattern>
		<url-pattern>/View/jsp/ADM003.jsp</url-pattern>
		<url-pattern>/View/jsp/ADM004.jsp</url-pattern>
		<url-pattern>/View/jsp/ADM005.jsp</url-pattern>
		<url-pattern>/View/jsp/ADM006.jsp</url-pattern>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>View/jsp/ADM001.jsp</welcome-file>
	</welcome-file-list>
</web-app>